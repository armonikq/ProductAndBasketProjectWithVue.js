{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  data() {\n    return {\n      products: [{\n        id: 1,\n        name: 'Apple Watch',\n        stock: 5,\n        price: 1000\n      }, {\n        id: 2,\n        name: 'Macbook air M1',\n        stock: 3,\n        price: 3000\n      }, {\n        id: 3,\n        name: 'Airpods Kulaklık',\n        stock: 7,\n        price: 3000\n      }, {\n        id: 4,\n        name: 'Ayakkabı',\n        stock: 10,\n        price: 2500\n      }],\n      cart: [],\n      message: null,\n      timer: null\n    };\n  },\n  methods: {\n    calculateTotalPrice() {\n      return this.products.reduce((acc, product) => {\n        const cart = this.cart.find(cart => cart.id === product.id);\n        if (!cart) return acc;\n        return acc + cart.quantity * product.price;\n      }, 0);\n    },\n    calculatePrice(item) {\n      const product = this.products.find(product => product.id === item.id);\n      return product.price * item.quantity;\n    },\n    addToCart(product) {\n      if (product.stock > 0) {\n        const cartItem = this.cart.find(item => item.id === product.id);\n        if (cartItem) {\n          cartItem.quantity++;\n        } else {\n          this.cart.push({\n            id: product.id,\n            name: product.name,\n            quantity: 1\n          });\n        }\n        product.stock--;\n      } else {\n        if (this.timer) clearTimeout(this.timer);\n        this.message = \"Bu ürün stokta bulunmamaktadır!\";\n        this.timer = setTimeout(() => {\n          this.message = null;\n        }, 3 * 1000);\n      }\n    },\n    removeFromCart(item) {\n      const cartItemIndex = this.cart.findIndex(cartItem => cartItem.id === item.id);\n      if (cartItemIndex !== -1) {\n        const cartItem = this.cart[cartItemIndex];\n        if (cartItem.quantity > 1) {\n          // Sepetten çıkarılan ürünün miktarı 1'den büyükse\n          cartItem.quantity--; // Sepet miktarından bir azaltılır\n          const product = this.products.find(product => product.id === item.id);\n          if (product) {\n            product.stock++; // Stoğa bir ürün eklenir\n          }\n        } else {\n          // Sepetten çıkarılan ürün miktarı 1 ise\n          this.cart.splice(cartItemIndex, 1); // Sepetten ürün tamamen çıkarılır\n          const product = this.products.find(product => product.id === item.id);\n          if (product) {\n            product.stock++; // Stoğa bir ürün eklenir\n          }\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["data","products","id","name","stock","price","cart","message","timer","methods","calculateTotalPrice","reduce","acc","product","find","quantity","calculatePrice","item","addToCart","cartItem","push","clearTimeout","setTimeout","removeFromCart","cartItemIndex","findIndex","splice"],"sources":["/Users/furkan/vue-deneme/src/App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <div class=\"alert\" v-if=\"message\">\n      {{ message }}\n    </div>\n    <h1>Ürün Listesi</h1>\n    <ul class=\"ul1\">\n      <li v-for=\"product in products\" :key=\"product.id\" class=\"li1\">\n        <img src=\"./assets/shopping-basket.png\" alt=\"\" width=\"10px\">\n        {{ product.name }} - Stok: {{ product.stock }} - Fiyat: {{ product.price }}TL <br>\n        <button @click=\"addToCart(product)\">Sepete Ekle</button>\n      </li>\n    </ul>\n    <h1>Sepet</h1>\n    <ul>\n      <li v-for=\"item in cart\" :key=\"item.id\">\n        <img src=\"./assets/shopping-basket.png\" alt=\"\" width=\"10px\">\n        {{ item.name }} - Miktar: {{ item.quantity }} - Fiyat : {{ calculatePrice(item) }}\n        <button @click=\"removeFromCart(item)\">Sepeten Cıkar</button>\n      </li>\n    </ul>\n    <div class=\"toplam\" v-if=\"calculateTotalPrice() > 0\">\n      Total: {{ calculateTotalPrice() }}\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      products: [\n        {id: 1, name: 'Apple Watch', stock: 5, price: 1000},\n        {id: 2, name: 'Macbook air M1', stock: 3, price: 3000},\n        {id: 3, name: 'Airpods Kulaklık', stock: 7, price: 3000},\n        {id: 4, name: 'Ayakkabı', stock: 10, price: 2500}\n      ],\n      cart: [],\n      message: null,\n      timer: null\n    };\n  },\n  methods: {\n    calculateTotalPrice() {\n      return this.products.reduce((acc, product) => {\n        const cart = this.cart.find(cart => cart.id === product.id);\n        if (!cart) return acc;\n        return acc + cart.quantity * product.price;\n      }, 0)\n    },\n    calculatePrice(item) {\n      const product = this.products.find((product) => product.id === item.id)\n      return product.price * item.quantity\n    },\n    addToCart(product) {\n      if (product.stock > 0) {\n        const cartItem = this.cart.find(item => item.id === product.id);\n        if (cartItem) {\n\n          cartItem.quantity++;\n        } else {\n          this.cart.push({id: product.id, name: product.name, quantity: 1});\n        }\n        product.stock--;\n      } else {\n        if(this.timer) clearTimeout(this.timer)\n          this.message = \"Bu ürün stokta bulunmamaktadır!\";\n        this.timer = setTimeout(() => {\n          this.message = null\n        }, 3 * 1000)\n      }\n    },\n\n    removeFromCart(item) {\n      const cartItemIndex = this.cart.findIndex(cartItem => cartItem.id === item.id);\n      if (cartItemIndex !== -1) {\n        const cartItem = this.cart[cartItemIndex];\n        if (cartItem.quantity > 1) { // Sepetten çıkarılan ürünün miktarı 1'den büyükse\n          cartItem.quantity--; // Sepet miktarından bir azaltılır\n          const product = this.products.find(product => product.id === item.id);\n          if (product) {\n            product.stock++; // Stoğa bir ürün eklenir\n          }\n        } else { // Sepetten çıkarılan ürün miktarı 1 ise\n          this.cart.splice(cartItemIndex, 1); // Sepetten ürün tamamen çıkarılır\n          const product = this.products.find(product => product.id === item.id);\n          if (product) {\n            product.stock++; // Stoğa bir ürün eklenir\n          }\n        }\n      }\n    }\n  }\n};\n</script>\n\n\n<style>\nh1 {\n  text-align: center;\n}\n\nli {\n  text-align: center;\n  list-style-type: none;\n}\n\n@keyframes slide {\n  0% {\n    right: -100%;\n  }\n  100% {\n    right: 10px\n  }\n}\n\n.alert {\n  position: absolute;\n  top: 10px;\n  right: 10px;\n  padding: 20px;\n  background-color: red;\n  animation: slide 1s;\n}\n\n.toplam{\n  text-align: center;\n}\n.ul1{\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  gap: 100px;\n  width: 100%;\n  padding: 0;\n  margin: 0\n}\n\n</style>"],"mappings":";AA4BA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,CACR;QAACC,EAAE,EAAE,CAAC;QAAEC,IAAI,EAAE,aAAa;QAAEC,KAAK,EAAE,CAAC;QAAEC,KAAK,EAAE;MAAI,CAAC,EACnD;QAACH,EAAE,EAAE,CAAC;QAAEC,IAAI,EAAE,gBAAgB;QAAEC,KAAK,EAAE,CAAC;QAAEC,KAAK,EAAE;MAAI,CAAC,EACtD;QAACH,EAAE,EAAE,CAAC;QAAEC,IAAI,EAAE,kBAAkB;QAAEC,KAAK,EAAE,CAAC;QAAEC,KAAK,EAAE;MAAI,CAAC,EACxD;QAACH,EAAE,EAAE,CAAC;QAAEC,IAAI,EAAE,UAAU;QAAEC,KAAK,EAAE,EAAE;QAAEC,KAAK,EAAE;MAAI,EACjD;MACDC,IAAI,EAAE,EAAE;MACRC,OAAO,EAAE,IAAI;MACbC,KAAK,EAAE;IACT,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,mBAAmBA,CAAA,EAAG;MACpB,OAAO,IAAI,CAACT,QAAQ,CAACU,MAAM,CAAC,CAACC,GAAG,EAAEC,OAAO,KAAK;QAC5C,MAAMP,IAAG,GAAI,IAAI,CAACA,IAAI,CAACQ,IAAI,CAACR,IAAG,IAAKA,IAAI,CAACJ,EAAC,KAAMW,OAAO,CAACX,EAAE,CAAC;QAC3D,IAAI,CAACI,IAAI,EAAE,OAAOM,GAAG;QACrB,OAAOA,GAAE,GAAIN,IAAI,CAACS,QAAO,GAAIF,OAAO,CAACR,KAAK;MAC5C,CAAC,EAAE,CAAC;IACN,CAAC;IACDW,cAAcA,CAACC,IAAI,EAAE;MACnB,MAAMJ,OAAM,GAAI,IAAI,CAACZ,QAAQ,CAACa,IAAI,CAAED,OAAO,IAAKA,OAAO,CAACX,EAAC,KAAMe,IAAI,CAACf,EAAE;MACtE,OAAOW,OAAO,CAACR,KAAI,GAAIY,IAAI,CAACF,QAAO;IACrC,CAAC;IACDG,SAASA,CAACL,OAAO,EAAE;MACjB,IAAIA,OAAO,CAACT,KAAI,GAAI,CAAC,EAAE;QACrB,MAAMe,QAAO,GAAI,IAAI,CAACb,IAAI,CAACQ,IAAI,CAACG,IAAG,IAAKA,IAAI,CAACf,EAAC,KAAMW,OAAO,CAACX,EAAE